generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LegoBrick {
  id          String   @id @default(cuid())
  name        String
  color       String
  size        String
  shape       String
  quantity    Int      @default(1)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("lego_bricks")
}

model LegoSet {
  id          String   @id @default(cuid())
  name        String
  theme       String
  pieceCount  Int
  difficulty  String
  price       Float?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("lego_sets")
}

model MenuItem {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  category    String
  isAvailable Boolean  @default(true)
  prepTime    Int      // minutes
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orders OrderItem[]

  @@map("menu_items")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  firstName String
  lastName  String
  city      String
  country   String   @default("USA")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders Order[]

  @@map("users")
}

model Order {
  id         String      @id @default(cuid())
  customerName String
  userId     String?
  tableNumber  Int
  status     OrderStatus @default(PENDING)
  totalPrice Float       @default(0)
  notes      String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  user  User?      @relation(fields: [userId], references: [id])
  items OrderItem[]

  @@map("orders")
}

model OrderItem {
  id         String   @id @default(cuid())
  orderId    String
  menuItemId String
  quantity   Int
  specialRequests String?
  createdAt  DateTime @default(now())

  order    Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItem MenuItem @relation(fields: [menuItemId], references: [id])

  @@map("order_items")
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  DELIVERED
  CANCELLED
}
